{{#each products}}
    <div class="row">
        {{#each this}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                <img src="/images/{{this.imagePath}}"class="img-responsive" alt="{{this.title}}">
                <div class="caption">
                    <h3>{{this.title}}</h3>
                    <p class="description">{{this.description}}</p>
                    
                    <div class="clearfix">
                        <div class="price pull-left">{{this.price}}</div>
                        <a href="#" class="btn btn-success pull-right" role="button">
                            <i class="glyphicon glyphicon-shopping-cart"></i>
                            添加到购物车
                        </a>
                    </div>
                </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}

